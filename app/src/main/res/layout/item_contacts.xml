<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_contactId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/tv_contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_contactId"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tv_contactId" />

    <TextView
        android:id="@+id/tv_contactMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contactName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_contactId"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tv_contactId" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_contactMobile"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />

</RelativeLayout>